<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.tapsell.sample">

    <application
        android:name=".TapsellApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RewardActivity"
            android:label="@string/reward" />

        <activity
            android:name=".activities.InterstitialActivity"
            android:label="@string/interstitial" />

        <activity
            android:name=".activities.navideAds.NativeActivity"
            android:label="@string/native_string" />

        <activity
            android:name=".activities.navideAds.NativeBannerActivity"
            android:label="@string/native_banner_in_activity" />

        <activity
            android:name=".activities.navideAds.NativeBannerInListActivity"
            android:label="@string/native_banner_in_list" />

        <activity
            android:name=".activities.navideAds.NativeVideoActivity"
            android:label="@string/native_video_in_activity" />

        <activity
            android:name=".activities.StandardActivity"
            android:label="@string/standard_banner" />

        <activity
            android:name=".activities.VastActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/vast" />

    </application>

</manifest>